{
  "plugins": [
    "stylelint-order",
    "stylelint-config-tailwindcss"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["**/*.css"],
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "apply",
              "variants",
              "responsive",
              "screen"
            ]
          }
        ]
      }
    }
  ]
} 